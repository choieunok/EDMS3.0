<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	
	<!-- console logging -->
	<appender name="logger.console" class="org.apache.log4j.ConsoleAppender">
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss} %m  (%F:%L) \n"/>	
		</layout>
	</appender>
	
	<!-- file logging -->
	<appender name="logger.file" class="org.apache.log4j.FileAppender">
		<param name="threshold" value="debug" />
		<param name="File" value="D:/eXrep/logs/expertEdms.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p [%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
		</layout>
	</appender>
	
	<!-- days file rolling -->
	<appender name="logger.dailyRollingFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/eXrep/logs/daily_server.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<param name="append" value="true"/>
		<param name="threshold" value="debug"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p [%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
		</layout>		
	</appender>
	
	<!-- db logging -->
	<appender name="db" class="org.apache.log4j.jdbc.JDBCAppender"></appender>
	
	
	<logger name="org.apache.commons">
		<level value="debug" />
	</logger>
	<logger name="org.springframework">
		<level value="debug" />
	</logger>

	<logger name="org.mybatis">
		<level value="debug" />
	</logger>
	<logger name="org.apache.ibatis">
		<level value="debug" />
	</logger>
	<logger name="java.sql">
		<level value="debug" />
	</logger>
	<logger name="java.sql.ResultSet">
		<level value="debug" />
	</logger>
	<logger name="java.sql.Connection">
		<level value="debug" />
	</logger>
	<logger name="java.sql.Statement">
		<level value="debug" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="debug" />
	</logger>
   
    <logger name="net.sf.ehcache">
        <level value="info" />
    </logger>
    <logger name="net.sf.ehcache.config">
        <level value="info" />
    </logger>
    <logger name="net.sf.ehcache.distribution">
        <level value="info" />
    </logger>
    <logger name="net.sf.ehcache.code">
        <level value="info" />
    </logger>
    	
	<root>
		<level value="debug" />
		<appender-ref ref="logger.dailyRollingFile" />
		<appender-ref ref="logger.console" />
	</root>
	
</log4j:configuration>